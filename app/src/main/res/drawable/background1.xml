<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke android:color="@color/white"
                android:width="3dp"/>
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#7CDD76"
                android:angle="-90"/>
        </shape>
    </item>
    <item android:gravity="bottom" android:height="300dp">
        <shape>
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#EF6F1A"
                android:endColor="#F3BB2F"
                android:angle="90"/>
        </shape>
    </item>


</layer-list>