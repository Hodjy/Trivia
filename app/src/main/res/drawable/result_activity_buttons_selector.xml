<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#18F600"
                android:endColor="#7EDC87"
                android:angle="90"/>
            <corners
                android:radius="10dp"/>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#7EDC87"
                android:endColor="#18F600"
                android:angle="90"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

</selector>