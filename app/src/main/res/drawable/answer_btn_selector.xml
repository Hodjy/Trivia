<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#0183EA"
                android:endColor="#590FDD"
                android:angle="90"/>
            <corners
                android:radius="10dp"/>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#590FDD"
                android:endColor="#0183EA"
                android:angle="90"/>
            <corners
                android:radius="10dp"/>
        </shape>

    </item>
</selector>