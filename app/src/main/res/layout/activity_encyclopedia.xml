<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_rocks_water">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="end"
        android:id="@+id/encyclopedia_activity_sound_btn"
        android:background="@drawable/ic_outline_volume_up"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:text="@string/encyclopedia"
        android:id="@+id/encyclopedia_activity_titleTv"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:layout_margin="10dp"
        android:background="@drawable/info_back_style"
        android:id="@+id/encyclopedia_activity_foliageList"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textStyle="bold"
        android:text="@string/leaderboard_activity_back"
        android:textAllCaps="false"
        android:background="@drawable/result_activity_buttons_selector"
        android:layout_gravity="center"
        android:id="@+id/encyclopedia_activity_backBtn"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>